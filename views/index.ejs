<%- include("partials/header"); %>
    <div class="card sign set">
        <div class="card-body">
          <h3 class="center">Create Account</h3>
          <!-- Makes POST request to / route -->
          <form action="/" method="POST">      
            <div class="form-group">
              <label for="name">Name</label>
              <input type="text" class="form-control input-text" name="name">
            </div>
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" class="form-control input-text" name="username">
            </div>
           
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" class="form-control input-text" name="password">
            </div>
           
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="form2Example31" />
                <label class="form-check-label remember" for="form2Example31"> Remember me </label>
              </div>
              <button class="btn btn-primary btn-lg btn-block submit" type="submit">Sign Up</button>

            <h5 class="center endLine">Already have an account? <a href="/signin">Login</a> </h5>
          </form>
    </div>
  </div>
</div>
<%- include("partials/footer");%>