<%- include('partials/header') %>
    <div class="card sign">
      <div class="card-body my-auto">
        <h3 class="center">Login to your account</h3>
        <!-- Makes POST request to /login route -->
        <form action="/signin" method="POST">
          <div class="form-group">
            <label for="email">Email</label>
            <input type="email" class="form-control input-text" name="username">
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input type="password" class="form-control input-text" name="password">
          </div>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="form2Example31" />
            <label class="form-check-label remember" for="form2Example31"> Remember Me </label>
          </div>
          <button class="btn btn-primary btn-lg btn-block submit" type="submit">Login</button>
          <h5 class="center endLine">New to MyApp? <a href="/">Sign Up</a> </h5>
        </div>
        </form>
        
      </div>
    </div>
  </div>
  <%- include("partials/footer");%>